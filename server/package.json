{
  "name": "plate-scraper-be",
  "version": "1.0.0",
  "description": "Backend for an app for collecting, editing, organizing, and storing recipes",
  "author": "Spencer Whitehead",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SpencerWhitehead7/plate-scraper.git"
  },
  "scripts": {
    "lint": "eslint ./src ./scripts ./mochaSetup.ts",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rm -rf node_modules ./dist && npm install",
    "node:local": "NODE_ENV=production node --env-file=.env.local",
    "node:test": "NODE_ENV=production node --env-file=.env.test",
    "node:prod": "NODE_ENV=production node",
    "dev": "npm run node:local ./node_modules/ts-node-dev/lib/bin -- ./src",
    "test": "npm run node:test ./node_modules/mocha/bin/mocha -- -r ts-node/register --file mochaSetup.ts -- '**/*.spec.ts'",
    "build": "rm -rf ./dist && tsc -p tsconfig.build.json",
    "seed": "npm run node:local ./node_modules/ts-node/dist/bin -- scripts/seed.ts",
    "cleanupOrphanedTags": "npm run node:local ./node_modules/ts-node/dist/bin -- scripts/cleanupOrphanedTags.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0-rc.12",
    "class-validator": "0.14.0",
    "compression": "^1.7.4",
    "cookie-session": "^2.1.0",
    "express": "^4.17.1",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "plate-scraper-parsers": "file:../parsers",
    "typeorm": "^0.3.17",
    "volleyball": "^1.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/cheerio": "^0.22.35",
    "@types/compression": "^1.7.5",
    "@types/cookie-session": "^2.0.49",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "mocha": "^10.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
