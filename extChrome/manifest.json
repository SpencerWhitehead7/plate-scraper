{
  "name": "Plate Scraper",
  "short_name": "PS",
  "manifest_version": 3,
  "version": "0.12",
  "description": "Scrapes title, ingredients, and instructions from recipe sites as editable, minimally formatted, downloadable plaintext.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "*://www.allrecipes.com/*",
        "*://www.bonappetit.com/*",
        "*://www.budgetbytes.com/*",
        "*://cooking.nytimes.com/*",
        "*://www.delish.com/*",
        "*://www.eatingwell.com/*",
        "*://www.epicurious.com/*",
        "*://www.food.com/*",
        "*://food52.com/*",
        "*://www.foodandwine.com/*",
        "*://www.foodnetwork.com/*",
        "*://www.seriouseats.com/*",
        "*://www.simplyrecipes.com/*",
        "*://www.tasty.co/*",
        "*://www.thekitchn.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Scrape recipe!",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"]
}
